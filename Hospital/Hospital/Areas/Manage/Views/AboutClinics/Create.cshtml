@model Hospital.Models.AboutClinic

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutManage.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Add About Icons</h2>
        </div>
        <div class="row clearfix">

            @using (Html.BeginForm("create", "aboutclinics", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="header">
                            <h2>Basic Information</h2>

                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Header, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:20px;color:black" })


                                        <div class="col-md-10">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Header, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:20px;color:black" })



                                        <div class="col-md-10">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>



                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">

                                    @Html.LabelFor(model => model.IconPhoto, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:20px;color:black" })

                                    <div class="col-md-10">
                                        <div class="form-line">

                                            @Html.EditorFor(model => model.IconPhoto, new { htmlAttributes = new { @class = "form-control", @type="file" } })
                                            @Html.ValidationMessageFor(model => model.IconPhoto, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-raised g-bg-cyan" />
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-raised" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>






            }
        </div>
        </div>

</section>
