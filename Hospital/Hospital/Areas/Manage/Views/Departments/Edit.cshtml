@model Hospital.Models.Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutManage.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            @using (Html.BeginForm("Edit", "Departments", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Doctors</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.EventId, "EventId", htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;font-size:20px;padding:10px 0;" })


                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DropDownList("EventId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EventId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;font-size:20px;padding:10px 0;" })
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
               

                <div class="form-group">
                    <input type="image" src="~/Uploads/@Model.Photo" width="250" />
                    @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;font-size:20px;padding:10px 0;" })

                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.About, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:black;font-size:20px;padding:10px 0;" })
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>






                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-raised g-bg-cyan" />
                    </div>
                </div>
            </div>

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }



        </div>
    </div>
</section>





















