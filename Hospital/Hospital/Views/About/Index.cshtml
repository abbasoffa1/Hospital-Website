
@{
    ViewBag.Title = "Index";
}
@model Hospital.Models.AddView
<section class="section section-breadcrumb">
    <div class="parallax-container breadcrumb-wrapper" data-parallax-img="/Uploads/bg-12.jpg">
        <div class="parallax-content section-lg context-dark">
            <div class="shell context-dark">
                <h2>About Us</h2>
                <div class="divider"></div>
            </div>
        </div>
    </div>
    <ul class="breadcrumb-custom">
        <li><a href="@Url.Action("index","home")">Home</a></li>
        <li>
            About Us
        </li>
    </ul>
</section>
<!-- Why choose us-->
<section class="section section-lg bg-white">
    <div class="shell">
        <div class="range range-md-middle range-30">
            <div class="cell-md-6">
                <div class="image-skew" style="max-width: 803px;">
                    <div class="image-skew-inner">
                        <div class="image-skew-inner-img">
                            <img src="~/Uploads/about-01-803x458.jpg" alt="" width="803" height="458" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="cell-md-4">
                <h2 class="heading-with-aside-divider">About Clinic<span class="divider"></span></h2>
                @foreach (var item in Model.aboutPhotos)
                {
                    <p>@item.AboutText</p>

                }
                <div class="range range-40 range-lg-50 range-lg">
                    @foreach (var item in Model.aboutClinics)
                    {
                        <div class="cell-xs-5">
                            <div class="icon-unit">
                                <div class="icon-unit-left">
                                    <img src="~/Uploads/@item.IconPhoto" alt="" width="34" height="52" />
                                </div>
                                <div class="icon-unit-body">
                                    <h5>@item.Header</h5>
                                    <p>@item.Text</p>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</section>
<section class="section bg-gray-bright section-xs section-counter context-dark text-center">
    <div class="section-counter-decoration"></div>
    <div class="section-counter-decoration"></div>
    <div class="shell">
        <div class="range range-xs-center range-30">
            @foreach (var item in Model.counters)
            {
                <div class="cell-xs-5 cell-md-2">
                    <div class="counter-wrap">
                        <div class="heading-1"><span class="counter" data-step="3000">@item.Count</span></div>
                        <p class="small">@item.Header</p>
                    </div>
                </div>
            }





        </div>
    </div>
</section>
<!-- Our Doctors-->
<section class="section section-lg bg-white">
    <div class="shell">
        <div class="range range-30">
            <div class="cell-lg-8">
                <div class="box">
                    <div class="box-left">
                        <h2>Our Doctors</h2>
                    </div>
                    <div class="box-right">
                        <div class="owl-outer-navigation" id="owl-carousel-nav">
                            <div class="owl-arrow owl-arrow-prev fl-budicons-free-left161">
                                <i class="fas fa-angle-left"></i>
                            </div>
                            <div class="owl-arrow owl-arrow-next fl-budicons-free-right163">
                                <i class="fas fa-angle-right"></i>
                            </div>
                        </div><a class="button button-albus button-effect-ujarak" href="@Url.Action("index","timetable")"> View TimeTable</a>
                    </div>
                </div>
                <div class="divider-default"></div>
                <div class="owl-carousel" data-items="1" data-xs-items="2" data-sm-items="3" data-md-items="4" data-lg-items="4" data-stage-padding="0" data-loop="true" data-margin="30" data-mouse-drag="false" data-nav-custom="#owl-carousel-nav">
                    @foreach (var item in Model.doctors)
                    {
                        <div class="item">
                            <div class="vip">
                                <div class="vip-image-block">
                                    <img src="~/Uploads/@item.Photo" alt="" width="268" height="216" />
                                </div>
                                <div class="vip-content">
                                    <h5><a href="@Url.Action("profile","doctors",new { id=item.Id})">@item.FullName</a></h5>
                                    <div class="vip-cite"><span>@item.Department.Name</span></div>
                                    <div class="vip-divider"></div>
                                    <div class="vip-link"><span class="fas fa-phone"></span><a href="@Url.Action("index","doctors")">@item.Phone</a></div>
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
            <div class="cell-lg-2 text-center text-xs-left"><a href="@Url.Action("index","contact")"><img src="~/One/images/about-02-268x483.jpg" alt="" width="268" height="483" /></a></div>
        </div>
    </div>
</section>
<!-- Page Footer-->
<section class="section section-sm bg-white-lighter">
    <div class="shell shell-out">
        <div class="range range-30">
            @foreach (var item in Model.settings)
            {
                <div class="cell-sm-3 cell-xs-5">
                    <div class="preffix-xl-70" style="max-width: 274px">
                        <h6 class="text-spacing-200 text-uppercase font-base">Contact us</h6>
                        <div class="divider-modern"></div>
                        <ul class="list list-md">

                            <li>
                                <div class="unit unit-spacing-xs unit-horizontal unit-custom">
                                    <div class="unit-left"><span class="icon icon-md icon-primary mdi-phone"></span></div>
                                    <div class="unit-body"><a class="link-gray-darker" href="tel_3A#">@item.Phone</a></div>
                                </div>
                            </li>
                            <li>
                                <div class="unit unit-spacing-xs unit-horizontal unit-custom">
                                    <div class="unit-left"><span class="icon icon-md icon-primary mdi-email-outline"></span></div>
                                    <div class="unit-body" style="position: relative; top: 1px"><a class="link-gray-darker" href="mailto:#">@item.Email</a></div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="cell-sm-3 cell-xs-5">
                    <div class="preffix-xl-70" style="max-width: 274px">
                        <h6 class="text-spacing-200 text-uppercase font-base">clinic address</h6>
                        <div class="divider-modern"></div>
                        <ul class="list list-md">
                            <li>
                                <div class="unit unit-spacing-xs unit-horizontal">
                                    <div class="unit-left"><span class="icon icon-md-biger icon-primary mdi-map-marker"></span></div>
                                    <div class="unit-body" style="position: relative; top: -4px;"><a class="link-default" href="#">@item.Adress</a></div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            }

            <div class="cell-sm-4">
                <div class="preffix-xl-70" style="max-width: 433px">
                    <h6 class="text-spacing-200 text-uppercase font-base">Our departments</h6>
                    <div class="divider-modern"></div>
                    @foreach (var item in Model.departments)
                    {
                        <ul class="list-inline list-inline-lg">
                            <li>
                                <ul class="list list-marked list-marked-sm list-marked-primary" style="line-height: 1.2">
                                    <li><a class="link-default" href="@Url.Action("index","departments")">@item.Name</a></li>
                                    <div style="height:5px"></div>
                                </ul>
                            </li>

                        </ul>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

